{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "swift-build",
            "type": "shell",
            "command": "swift build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "swift-build-tests",
            "type": "process",
            "command": "swift",
            "group": "build",
            "args": [
                "build",
                "--build-tests"
            ]
        },
        {
            "label": "swift-test",
            "type": "process",
            "command": "swift",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "args": [
                "test"
            ]
        }
    ]
}
